        <activity android:name=".ui.activity.DataDetailActivity" />
        <activity android:name=".ui.activity.mine.MyDoctorActivity" />
        <activity android:name=".ui.activity.mine.SettingActivity" />
        <activity android:name=".ui.activity.mine.MyInfoActivity" />
        <activity android:name=".ui.activity.ChangePassActivity" />
