<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/local_data_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingTop="20dp"
                android:orientation="horizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="压强"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="角度"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:paddingTop="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/data_pressure"
                    android:text="1000pa"
                    android:textSize="20sp"
                    android:textColor="@color/simpleBlue"
                    android:textAlignment="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/data_angle"
                    android:text="30度"
                    android:textSize="20sp"
                    android:textColor="@color/simpleAmber"
                    android:textAlignment="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="温度"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="脉搏"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:paddingTop="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/data_temperature"
                    android:text="37℃"
                    android:textSize="20sp"
                    android:textColor="@color/simpleOrange"
                    android:textAlignment="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/data_pulse"
                    android:text="100次/分"
                    android:textSize="20sp"
                    android:textColor="@color/simpleGreen"
                    android:textAlignment="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>